[metadata]
author = LIGO Scientific Collaboration
author_email = lal-discuss@ligo.org
classifiers =
	Intended Audience :: Science/Research,
	License :: OSI Approved :: GNU General Public License v3 or later (GPLv3+)
	Operating System :: POSIX,
	Programming Language :: Python :: 2
	Programming Language :: Python :: 2.7
	Programming Language :: Python :: 3
	Programming Language :: Python :: 3.5
	Programming Language :: Python :: 3.6
	Programming Language :: Python :: 3.7
	Programming Language :: Python :: 3.8
	Topic :: Scientific/Engineering :: Astronomy,
	Topic :: Scientific/Engineering :: Physics
description = {{ meta['about']['summary'] }}
download_url = http://software.ligo.org/lscsoft/soure/lalsuite/
license = {{ meta['about']['license'] }}
long_description =
	{{- meta['about']['description']|replace("\n", "\n\t") -}}
maintainer = Adam Mercer
maintainer_email = adam.mercer@ligo.org
name = {{ meta['package']['name'] }}
project_urls =
	Documentation = {{ meta['about']['doc_url'] }}
	Repository = {{ meta['about']['doc_url'] }}
python_version = "2.7,>=3.5"
version = {{ meta['package']['version'] }}
url = {{ meta['about']['home'] }}

[options]
install_requires =
	lscsoft-glue
	ligo-segments
	matplotlib
	numpy>=1.7
	python-dateutil
	scipy

[bdist_wheel]
universal = 1
